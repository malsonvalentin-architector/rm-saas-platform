# =============================================================================
# ОСНОВНЫЕ НАСТРОЙКИ
# =============================================================================

# SECURITY WARNING: keep the secret key used in production secret!
SECRET_KEY=your-super-secret-key-change-this-in-production-12345

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=False

# Домены, на которых работает приложение
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost

# =============================================================================
# БАЗА ДАННЫХ (PostgreSQL)
# =============================================================================

DB_ENGINE=django.db.backends.postgresql
DB_NAME=rm_saas_db
DB_USER=rm_user
DB_PASSWORD=your-secure-db-password-here
DB_HOST=db
DB_PORT=5432

# =============================================================================
# REDIS (для Celery)
# =============================================================================

REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================================================
# EMAIL НАСТРОЙКИ
# =============================================================================

# Для Gmail (рекомендуется использовать App Password)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# От кого приходят письма
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# =============================================================================
# TELEGRAM BOT (опционально)
# =============================================================================

TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/telegram/webhook/

# =============================================================================
# STATIC FILES (для production)
# =============================================================================

STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media

# =============================================================================
# ЛОГИРОВАНИЕ (опционально)
# =============================================================================

LOG_LEVEL=INFO

# =============================================================================
# SENTRY (мониторинг ошибок - опционально)
# =============================================================================

# SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# СУПЕРПОЛЬЗОВАТЕЛЬ (для первой установки)
# =============================================================================

SUPERUSER_USERNAME=admin
SUPERUSER_EMAIL=admin@yourdomain.com
SUPERUSER_PASSWORD=change-this-secure-password
